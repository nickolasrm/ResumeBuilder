        <title>Resume Builder</title>
        <script type="text/javascript">
            function save()
            {
                const printElement = $('#toPdf'),
                    w = printElement.width(), 
                    h = printElement.height(),
                    ptFactor = 0.75292857248934
                    pdf = new jsPDF('p', 'pt', [ptFactor*h, ptFactor*w]),
                    lang = window.location.pathname.split('/')[1]

                pdf.addHTML(printElement.get(0), function () {
                    pdf.save(`Resume-${lang}.pdf`)
                })
            }
        </script>
